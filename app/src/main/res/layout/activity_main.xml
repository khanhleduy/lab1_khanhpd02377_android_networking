<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.aConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bai1_2.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"

        android:layout_marginBottom="19dp"
        android:text="Thread trong Android"
        app:layout_constraintBottom_toTopOf="@+id/imgMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvMessage"
        app:layout_constraintEnd_toEndOf="@+id/btnLoadImage"
        app:layout_constraintStart_toStartOf="@+id/btnLoadImage"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnLoadImage"
        android:layout_width="126dp"
        android:layout_height="56dp"
        android:layout_marginBottom="365dp"
        android:onClick="btnLoadImage"
        android:text="Load Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="17dp"
        android:text="Message"
        app:layout_constraintBottom_toTopOf="@+id/btnLoadImage"
        app:layout_constraintEnd_toEndOf="@+id/imgMessage"
        app:layout_constraintTop_toBottomOf="@+id/imgMessage" />
</android.support.constraint.aConstraintLayout>